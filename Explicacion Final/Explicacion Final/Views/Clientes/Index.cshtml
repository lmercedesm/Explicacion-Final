@model IEnumerable<Explicacion_Final.Models.Cliente>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    @Html.ActionLink("Create New", "Create")
    @using (Html.BeginForm())
    {
    <p>

        Busqueda por Nombre: @Html.TextBox("Nombre")<br />



    </p>
    <div>
        <p>
            @{
                var CategoriasCliente = new List<SelectListItem>() {
                        new SelectListItem()
                        {
                            Text="Regular",
                            Value="Regular"

                    },
                         new SelectListItem()
                        {
                            Text="Premium",
                            Value="Premium"

                    }

                };
            }
            Busqueda por Categoria: @Html.DropDownList("Categoria", CategoriasCliente)<br />
            <input type="submit" value="Filtro" />

        </p>
    </div>
}
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DNI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DNI)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.IdCliente }) |
                    @Html.ActionLink("Details", "Details", new { id = item.IdCliente }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.IdCliente })
                </td>
            </tr>
        }

    </table>
    @using (Html.BeginForm("Print", "Cliente", FormMethod.Post))
    {
        <input type="submit" value="Generar reporte" />
    }
